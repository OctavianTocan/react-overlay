{
  "name": "@twinmind/bottom-sheet",
  "version": "1.0.0",
  "description": "Custom draggable bottom sheet component with snap points, inspired by react-spring-bottom-sheet",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-native": ">=0.70.0",
    "react-native-web": ">=0.19.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "react-native-web": "^0.21.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "react-native",
    "bottom-sheet",
    "modal",
    "snap-points",
    "drag",
    "animation"
  ]
}
