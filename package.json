{
  "name": "@octavian-tocan/react-overlay",
  "version": "1.0.0",
  "description": "Unified overlay components for React: BottomSheet with snap points and Modal with animations",
  "author": "Octavian Tocan",
  "license": "MIT",
  "homepage": "https://github.com/OctavianTocan/react-overlay#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctavianTocan/react-overlay.git"
  },
  "bugs": {
    "url": "https://github.com/OctavianTocan/react-overlay/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "clsx": "^2.0.0",
    "lucide-react": ">=0.300.0",
    "motion": ">=11.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "clsx": "^2.1.1",
    "jsdom": "^25.0.0",
    "lucide-react": "^0.469.0",
    "motion": "^12.29.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "bottom-sheet",
    "modal",
    "dialog",
    "overlay",
    "popup",
    "sheet",
    "snap-points",
    "drag",
    "swipe",
    "animation",
    "motion",
    "accessible",
    "a11y",
    "typescript",
    "tailwind"
  ],
  "publishConfig": {
    "access": "public"
  }
}
