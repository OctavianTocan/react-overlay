{
  "name": "@octavian-tocan/react-overlay",
  "version": "1.3.0",
  "description": "Unified overlay components for React: BottomSheet with snap points and Modal with animations",
  "author": "Octavian Tocan",
  "license": "MIT",
  "homepage": "https://github.com/OctavianTocan/react-overlay#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctavianTocan/react-overlay.git"
  },
  "bugs": {
    "url": "https://github.com/OctavianTocan/react-overlay/issues"
  },
  "sideEffects": [
    "*.css"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./bottom-sheet": {
      "types": "./dist/bottom-sheet.d.ts",
      "import": "./dist/bottom-sheet.js",
      "require": "./dist/bottom-sheet.cjs"
    },
    "./modal": {
      "types": "./dist/modal.d.ts",
      "import": "./dist/modal.js",
      "require": "./dist/modal.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./styles/scrollbar.css": "./dist/styles/scrollbar.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "pnpm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "visual-test": "lost-pixel",
    "visual-test:update": "LOST_PIXEL_MODE=update lost-pixel"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "clsx": "^2.0.0",
    "lucide-react": ">=0.300.0",
    "motion": ">=11.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwind-merge": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^10.2.4",
    "@storybook/react-vite": "^10.2.4",
    "@storybook/test": "^8.6.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "lost-pixel": "^3.22.0",
    "lucide-react": "^0.563.0",
    "motion": "^12.31.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "semantic-release": "^25.0.3",
    "storybook": "^10.2.4",
    "tailwind-merge": "^3.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "bottom-sheet",
    "modal",
    "dialog",
    "overlay",
    "popup",
    "sheet",
    "snap-points",
    "drag",
    "swipe",
    "animation",
    "motion",
    "accessible",
    "a11y",
    "typescript",
    "tailwind"
  ],
  "publishConfig": {
    "access": "public"
  }
}
